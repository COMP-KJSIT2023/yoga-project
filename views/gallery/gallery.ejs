<% layout('/layouts/boilerplate') %>

<style>
    .new a {
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 22px;
    }

    .new {
        margin: 3rem 0;
    }
</style>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let currImage of allImages) { %>
            <a href="<%= currImage.image.url %>" data-lightbox="gallery" data-title="image">
            <div class="card col">
                <img src="<%= currImage.image.url %>" class="card-img-top" alt="image">
                <div class="card-body">
                    <p class="card-text"><%= currImage.description %></p>
                </div>
            </div></a>
        <% } %>
    </div>

    <div class="new">
        <a href="/gallery/new" class="btn btn-success">Upload New Content</a>
    </div>
</body>