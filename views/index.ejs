    <script>
        const gallery = document.querySelector('.gallery');
        const cloneGallery = gallery.cloneNode(true);

        // Append cloned gallery to the original
        gallery.appendChild(cloneGallery);

        // Optional: Scroll the gallery automatically
        let scrollAmount = 0;
        const scrollDelay = 20; // Adjust the delay for smoothness

        function scrollGallery() {
            scrollAmount += 1;
            gallery.style.transform = `translateX(-${scrollAmount}px)`;

            if (scrollAmount % gallery.offsetWidth === 0) {
                scrollAmount = 0;
            }
        }

        setInterval(scrollGallery, scrollDelay);
    </script>
